<div class="col-md-4">
  <div class="row">


    <%= image_tag @book.book_img.url(:book_show), class: "book-show" %>
    <br><br>
    <h5>Posted by <%= User.find(@book.user_id).email %></h5>


    <div class="links btn-group">
      <p></p>
      <p></p>
      <p></p>

      <% if user_signed_in? %>
        <% if @book.user_id == current_user.id %>
          <%= link_to "Edit", edit_book_path(@book), class: "btn btn-custom" %>
          <%= link_to "Delete", book_path(@book), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-custom" %>
        <% end %>
      <% end %>

    </div>

    <div class="row">
      <div class="col-md-11">

        <div class="reviews">

          <h1>Reviews</h1>

          <% if @book.reviews.present? %>
            <%= render @book.reviews %>
          <% else %>
            <h6>No reviews yet</h6>
          <% end %>

          <% if user_signed_in? %>
            <hr>
            <%= link_to "Add Review", new_book_review_path(@book), class: "btn btn-custom" %>
          <% end %>
          
        </div>

      </div>
    </div>
  </div>
</div>

<div class="col-md-8">
  <div class="book-info">

    <h2 class="book-title"><%= @book.title %></h2><span>(<%= @book.category.name %>)</span>
    <h3 class="book-author"><span>By </span><%= @book.author %></h3>
    <h2 class="avg-rating">Average Rating</h2>
    <div class="average-review-rating" data-score=<%= @average_review %>></div>
    <span class="number-of-reviews">Based on <%= @book.reviews.count %> reviews</span>
    <p class="book-desc"><%= @book.description %></p>

  </div>
</div>

</div>


<script>
    $('.review-rating').raty({
        readOnly: true,
        score: function () {
            return $(this).attr('data-score')
        },
        path: '/assets'
    });
</script>

<script>
    $('.average-review-rating').raty({
        readOnly: true,
        path: '/assets',
        score: function () {
            return $(this).attr('data-score')
        }
    });
</script>

