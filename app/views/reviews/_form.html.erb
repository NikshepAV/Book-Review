<%= simple_form_for([@book, @book.reviews.build]) do |f| %>

  <div id="rating-form" data-score>
    <label>Rating</label>
  </div>

  <%= f.input :comment %>
  <%= f.button :submit, class: "btn btn-custom2" %>

<% end %>

<script>
    $('#rating-form').raty({
        path: '/images',
        scoreName: 'review[rating]'
    });
</script>